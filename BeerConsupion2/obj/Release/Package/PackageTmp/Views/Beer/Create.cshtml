@model BeerConsupion2.Models.BeerCreateView

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>BeerCreateView</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })









        <div class="form-group" style="margin-left: 3px;">
           @for (int i = 0; i < Model.BeerTypes.Count; i++)
           {
               @Html.HiddenFor(x => x.BeerTypes[i].Id)
               @Html.HiddenFor(x => x.BeerTypes[i].Name)
           }
            @Html.LabelFor(x => Model.TypeId, htmlAttributes: new { @class = "control-label col-md-2"})
            @Html.DropDownListFor(x => Model.TypeId, new SelectList(Model.BeerTypes, "Id", "Name"), htmlAttributes: new { @class = "form-control", id = "Id"})
            @Html.ValidationMessageFor(x => x.TypeId, "", new { @class = "text-danger"})
        </div>














        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NonAlcohol, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox" style="margin-left: 19px;">
                    @Html.EditorFor(model => model.NonAlcohol)
                    @Html.ValidationMessageFor(model => model.NonAlcohol, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Volume, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Volume, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Volume, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
